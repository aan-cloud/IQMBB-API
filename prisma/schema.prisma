generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model operator{
  id String @id
  name String
  addres String
  healty Boolean
  schedules schedule[]
}

model section {
  id String @id
  name String? @unique

  schedules schedule[]
}

model machine {
  id String @id
  model String

  schedules schedule[]
}

model tube {
  id String @id
  part String
  size Int

  schedules schedule[]
}

model schedule {
  id Int  @id @default(autoincrement())
  operator String
  section String
  machine String
  tube String
  start String
  end String
  id_operator operator @relation(fields: [operator], references: [id])
  id_section section @relation(fields: [section], references: [id])
  id_machine machine @relation(fields: [machine], references: [id])
  id_tube tube @relation(fields: [tube], references: [id])
}